{
  "name": "Video Speed Controller",
  "version": "1.0",
  "description": "Set playback speed for all videos (default: 2x).",
  "manifest_version": 3,
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}

